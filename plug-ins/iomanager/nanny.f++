	waitRussian = function() {
		var msg;

		msg = waitSpeech();
		
		if (msg == "") {
			say("Но это же пустое имя.");
			throw "error";
		}
		
		if (!msg.isRussian()) {
			excl("Имя может содержать только русские буквы!");
			throw "error";
		}
		
		return msg.capitalize();
	};


