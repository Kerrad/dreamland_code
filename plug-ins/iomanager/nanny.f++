	ackNewPassword = function() {
		var p, p0;
	
		p = waitNewPassword();

		if (p.size() < 5) {
			say("Пароль должен быть длиннее пяти символов. Попробуй еще раз.");
			return false;
		}
		
		say("Повтори этот пароль еще раз, для подтверждения");
		
